<%-include("partials/header.ejs");%>
<body>

    <%-include("partials/navbar.ejs");%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta</label>
            <br>
            <textarea placeholder="Digite sua resposta" name="corpo"  class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
            <br>
            <button class="btn btn-primary" >Responder</button>
        </form>
        <br>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
         <div class="card">
            <div class="card-body">
                <br>
                <p><%= resposta.corpo %></p>
            </div>
         </div>
        <% })%>
    </div>
   
</body>
<%-include("partials/footer.ejs");%>